{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch OpenOCD",
            "type": "shell",
            "command": "tools/openocd/openocd",
            "args": [
                "-f", "tools/openocd/interface/ch347.cfg",
                "-f", "tools/openocd/target/tgt_e907.cfg"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^.+$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Open On-Chip Debugger",
                    "endsPattern": "Info : Listening on port 3333 for gdb connections"
                }
            }
        }
    ]
}